{
  // ----------------- IDE SETTINGS ----------------- //
  "breadcrumbs.enabled": true,

  "editor.accessibilitySupport": "off",
  "editor.codeLens": false,

  "editor.fontFamily": "FiraCode NF",
  // "editor.fontFamily": "JetBrainsMono NF",
  // "editor.fontFamily": "BlexMono NF",
  // "editor.fontFamily": "CaskaydiaCove NF",
  // "editor.fontFamily": "OperatorMonoLig NF",
  // "editor.fontFamily": "Consolas, 'Courier New', monospace",

  "editor.fontSize": 12,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": true,
  "editor.lineHeight": 22,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.linkedEditing": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {},
  "editor.wordWrap": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },

  "emmet.excludeLanguages": [],
  "emmet.includeLanguages": {
    "html": "html",
    "javascript": "javascriptreact"
  },

  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "type",

  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": false,

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "files.trimFinalNewlines": true,
  "files.associations": {
    "*.cfc": "html",
    "*.cfm": "html"
  },
  "files.exclude": {
    "**/.idea": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/*.code-search": true,
    "ios/": true,
    "android/": true,
    "dist/": true,
    "yarn.lock": true,
    "package-lock.json": true,
    ".gitignore": true,
    ".expo": true,
    ".vscode": true
  },

  "git.autofetch": true,

  "launch": {
    "configurations": [],
    "compounds": []
  },

  // ----------------- TERMINAL SETTINGS ----------------- //
  "terminal.external.windowsExec": "Terminal.app",
  // "terminal.integrated.fontFamily": "FiraCode NF", // looks good on terminal, cmd, ps, and vscode
  // "terminal.integrated.fontFamily": "JetBrainsMono NF", // looks good on terminal, cmd, and ps; but slightly thick on vscode
  // "terminal.integrated.fontFamily": "BlexMono NF", // looks good on terminal and vscode; but too thin on cmd and ps
  // "terminal.integrated.fontFamily": "CaskaydiaCove NF", // looks good on terminal, cmd, and ps; but too thick on vscode
  // "terminal.integrated.fontFamily": "OperatorMonoLig NF", // not listed on cmd and ps
  // "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",

  "terminal.integrated.fontSize": 11,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.lineHeight": 1.2,

  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.profiles.windows": {
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    },
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    }
  },

  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Default Dark+",
  "workbench.preferredLightColorTheme": "Default Light+",
  "window.restoreFullscreen": true,
  "window.title": "${activeEditorShort}${separator}${rootName}",

  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.tabSizing": "shrink",

  // ----------------- LANGUAGE SETTINGS ----------------- //
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.quickSuggestions": true,
    "files.trimTrailingWhitespace": false
  },

  // ----------------- PLUGIN SETTINGS ----------------- //
  "npm-intellisense.importES6": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.arrowParens": "avoid",
  "prettier.proseWrap": "preserve",
  "prettier.quoteProps": "as-needed",
  "prettier.jsxBracketSameLine": false,
  "prettier.bracketSpacing": true,
  "prettier.tabWidth": 2,
  "typescript.suggest.paths": false,
  "vsicons.dontShowNewVersionMessage": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}